@page
@model PJSrenovationWeb.Pages.Projects.IndexModel

@{
    ViewData["Title"] = "Current Projects";
}

<h1>Current Projects</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].ActualEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].ProjectImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].ImageDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].Property)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Project) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Property.PropertyID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ProjectID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ProjectID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ProjectID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
