@page
@model PJSrenovationWeb.Pages.Properties.EditModel
@using PJSrenovationWeb.Models

@{
    ViewData["Title"] = "Edit Property";
}


<section id="edit-property">
    <header class="text-center">
        <h1 class="col-sm-12 text-center">Edit Property</h1>
    </header>

    <div class="row">
        <div class="col-md-4 offset-lg-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Property.PropertyID" />
                <div class="form-group">
                    <label asp-for="Property.ClintID" class="control-label"></label>
                    <select asp-for="Property.ClintID" class="form-control" asp-items="ViewBag.ClintID"></select>
                    <span asp-validation-for="Property.ClintID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Property.Address" class="control-label"></label>
                    <input asp-for="Property.Address" class="form-control" />
                    <span asp-validation-for="Property.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Property.Location" class="control-label"></label>
                    <input asp-for="Property.Location" class="form-control" />
                    <span asp-validation-for="Property.Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Property.County" class="control-label"></label>
                    <input asp-for="Property.County" class="form-control" />
                    <span asp-validation-for="Property.County" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Property.Postcode" class="control-label"></label>
                    <input asp-for="Property.Postcode" class="form-control" />
                    <span asp-validation-for="Property.Postcode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Property.PropertyType" class="control-label"></label>
                    <select asp-for="Property.PropertyType" class="form-control"
                            asp-items="Html.GetEnumSelectList<PropertyType>()"></select>
                    <span asp-validation-for="Property.PropertyType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Property.NumberOfRooms" class="control-label"></label>
                    <input asp-for="Property.NumberOfRooms" class="form-control" />
                    <span asp-validation-for="Property.NumberOfRooms" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Property.EntryDate" class="control-label"></label>
                    <input asp-for="Property.EntryDate" class="form-control" />
                    <span asp-validation-for="Property.EntryDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
